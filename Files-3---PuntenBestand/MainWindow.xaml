<Window x:Class="Files_3___PuntenBestand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Files_3___PuntenBestand"
        mc:Ignorable="d"
        Title="Inlezen bestand" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="resultTextBox" Grid.Row="0" Margin="10" IsReadOnly="True" FontFamily="Consolas"/>
        <WrapPanel Grid.Row="1">
            <Button x:Name="readButton" Content="Inlezen..." Margin="20" Width="80" Height="30" Click="readButton_Click"/>
            <Button x:Name="transformButton" Content="Verwerken" Margin="20" Width="80" Height="30" IsEnabled="False" Click="transformButton_Click"/>
            <Button x:Name="checkButton" Content="Nalezen..." Margin="20" Width="80" Height="30" IsEnabled="False" Click="checkButton_Click"/>
            <Button x:Name="closeButton" Content="Sluiten" Margin="20" Width="80" Height="30" Click="closeButton_Click"/>
        </WrapPanel>
    </Grid>
</Window>
